
<h1>EAT DA BURGER!</h1>

  <h2>Add a Burger!</h2>
  <form class="create-form">
    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button class="submitBtn" type="submit">Order Burger!</button>
  </form>

  <h2>Burgers!</h2>

  <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/unless}}
      {{/each}}
  </ul>

  <h2>Devoured!</h2>

  <ul>
    {{#each burgers}}
        {{#if devoured}}
          {{> burgers/devoured-burger-block devoured=true}}
        {{/if}}
    {{/each}}
  </ul>
